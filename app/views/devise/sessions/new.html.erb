<div style="background-color: rgb(250,250,256);" class="w-lg mt-20 font-sans mx-auto shadow-md shadow-blue-200 rounded-sm flex flex-col items-center overflow-hidden" >
<h2 class="text-4xl p-4 font-semibold text-white w-full text-center bg-blue-400" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: " w-5/6"}) do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field my-6">
    <%= f.label :email, class: "font-semibold ml-1" %><br />
    <%= f.email_field :email, class: "mt-1 w-full h-10 outline-1 outline-gray-400 rounded-lg pl-2 focus:outline-1 focus:outline-blue-400", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field w-full my-6 ">
    <%= f.label :password, class: "font-semibold ml-1" %><br />
    <%= f.password_field :password, class: "w-full  mt-1 h-10 outline-1 outline-gray-400 rounded-lg pl-2 focus:outline-1 focus:outline-blue-400", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field  ">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions my-2 w-full flex justify-center font-semibold">
    <%= f.submit "Log in", class: "w-50 bg-blue-500 hover:bg-transparent active:bg-gray-100 hover:text-blue-400 hover:outline-1 hover:outline-blue-400 text-white h-8" %>
  </div>
<% end %>

<div class="w-5/6 my-5">
<%= render "devise/shared/links" %>
</div>

</div>
